<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.weatherapp.sevenDaysForecast.SevenDaysForecastViewModel" />

        <variable
            name="cardViewText"
            type="com.example.weatherapp.sevenDaysForecast.SevenDaysCardViewText" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/sevenDaysCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/cardColor" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:text="@{cardViewText.date}"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                tools:text="Today" />

            <TextView
                android:id="@+id/sevenDaysMinTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewText.propertyMin}"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                tools:text="Min Temp: 15 C"/>

            <TextView
                android:id="@+id/sevenDaysMaxTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardViewText.propertyMax}"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                tools:text="Max Temp: 30 C"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>