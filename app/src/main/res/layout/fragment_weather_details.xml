<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
            type="com.example.weatherapp.details.WeatherDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailsConstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_gradient"
        tools:context=".details.WeatherDetailsFragment">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@{viewModel.properties.location.name}"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="London"/>

        <TextView
            android:id="@+id/updateDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@{viewModel.properties.current.last_updated_string}"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/cityName"
            tools:text="Updated at: 2023/7/6 13:52"/>

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.properties.current.temp_c_string}"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="30 C"/>

        <TextView
            android:id="@+id/weatherCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.properties.current.condition.text}"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/currentTemp"
            tools:text="Sunny"/>

        <LinearLayout
            android:id="@+id/minMaxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/currentTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/minTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.properties.forecast.forecastday[0].day.mintemp_c_string}"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:paddingRight="25dp"
                tools:text="Min Temp: 29 C"/>

            <TextView
                android:id="@+id/maxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.properties.forecast.forecastday[0].day.maxtemp_c_string}"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/minTemp"
                android:paddingLeft="25dp"
                tools:text="Max Temp: 29 C"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/currentTemp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:padding="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:itemCount="6"
            tools:listitem="@layout/weather_details_item"
            app:listWeather="@{viewModel.propertiesList}" >

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sevenDays"
            app:layout_constraintTop_toBottomOf="@+id/gridList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/history"
            android:backgroundTint="@color/cardColor"
            android:text="3 Day Forecast"
            android:textColor="@color/white"
            android:shadowDy="5"
            android:padding="15dp"
            android:layout_marginEnd="90dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history"
            app:layout_constraintTop_toBottomOf="@+id/gridList"
            app:layout_constraintStart_toStartOf="@+id/sevenDays"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/cardColor"
            android:text="View History"
            android:textColor="@color/white"
            android:shadowDy="5"
            android:padding="15dp"
            android:layout_marginStart="93dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>